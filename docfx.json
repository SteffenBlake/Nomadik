{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/Nomadik.Core.Abstractions/Nomadik.Core.Abstractions.csproj",
            "src/Nomadik.Core/Nomadik.Core.csproj",
            "src/Nomadik.Extensions.Swagger/Nomadik.Extensions.Swagger.csproj",
            "src/Nomadik.Extensions.DependencyInjection/Nomadik.Extensions.DependencyInjection.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Nomadik",
      "_appTitle": "Nomadik",
      "_enableSearch": true,
      "pdf": false
    }
  }
}
